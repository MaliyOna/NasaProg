<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NasaPet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NasaPet"
    xmlns:views="clr-namespace:NasaPet.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="NasaPet">

    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home"
                          Route="homePage"
                          ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="News" Route="newsRoot">
            <ShellContent Title="News"
                          Route="newsPage"
                          ContentTemplate="{DataTemplate views:NewsPage}" />
            <ShellContent Title="Events"
                          Route="eventsPage"
                          ContentTemplate="{DataTemplate views:EventsPage}" />
        </Tab>
    </TabBar>
</Shell>
